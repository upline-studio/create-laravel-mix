{
  "compilerOptions": {
    "target": "es6",
    "lib": ["ES2021", "DOM"],
    "module": "es2020",
    "moduleResolution": "node",
    "jsx": "preserve",
    "baseUrl": "./",
    "strict": true, // Enable strict type-checking options
    "skipLibCheck": true, // Skip type checking of declaration files
    "noImplicitAny": true, // Bypass raising errors on `any` type,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/*": ["./##SOURCE_PATH##/*"],
      "@/*": ["./##SOURCE_PATH##/*"]
    }
  },
  "include": ["##SOURCE_PATH##/js/**/*"] // Frontend paths pattern
}
